<?xml version="1.0" encoding="UTF-8"?>

<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
    http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Payever\Bundle\CoreBundle\Entity\Gallery">
        <property name="code">
            <constraint name="NotBlank">
                <option name="message">payever.gallery.code.not_blank</option>
            </constraint>
        </property>
        <property name="name">
            <constraint name="NotBlank">
                <option name="message">payever.gallery.name.not_blank</option>
            </constraint>
        </property>
    </class>

    <class name="Payever\Bundle\CoreBundle\Entity\Image">
        <property name="code">
            <constraint name="NotBlank">
                <option name="message">payever.image.code.not_blank</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
